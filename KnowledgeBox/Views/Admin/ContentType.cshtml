@model IEnumerable<KnowledgeBox.Models.ContentType>

<div class="container" style="height: 712px; width: 1200px; padding-right: 0px; padding-left: 0px; margin-right: auto; margin-left: auto">  
   @Html.Partial("_AdminMenu")
  <div class="row" style="margin: 0; background: #FFF; padding: 20px">
    <div class="col-md-12" style="">
      <table class="table table-striped table-bordered table-hover">
        <thead>
          <tr>
            <th>Description</th>
            <th>Date</th>
            <th>Thumbnail</th>
            <th>
              <a href="@Url.Action("EditContentType")">
                <i class="glyphicon glyphicon-plus"></i>
                <span class="sr-only">Edit</span>
              </a>
            </th>
          </tr>
        </thead>
        @foreach (var item in Model)
        {
          <tr>
            <td>@item.ContentType_Description</td>
            <td>@item.ContentType_Date.ToString("MMM dd yyy")</td>
              @if (!string.IsNullOrEmpty(@item.ContentType_Thumbnail))
              { <td><img style="height:37px" src="/Files/@item.ContentType_Thumbnail" /></td>}
              else
              {
              <td></td>
              }
            <td>
              <a href="@Url.Action("EditContentType", new { id = @item.ContentType_Id})">
                <i class="glyphicon glyphicon-pencil"></i>
                <span class="sr-only">Edit</span>
              </a>
            </td>
          </tr>          
        }
      </table>
      <div>
        @Html.ActionLink("Back to List", "Index")
      </div>
    </div>
  </div>
</div>

