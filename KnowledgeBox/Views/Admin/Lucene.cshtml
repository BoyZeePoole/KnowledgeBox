@{
    ViewBag.Title = "Lucene";
}

<div class="container" style="height: 712px; width: 1200px; padding-right: 0px; padding-left: 0px; margin-right: auto; margin-left: auto">
    @Html.Partial("_AdminMenu")
    <div class="row" style="margin: 0; background: #FFF; padding: 20px">
        <div class="col-md-12" style="">
            @using (Html.BeginForm("BuildLucene", "Admin", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)
                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <h2>Build Lucene</h2><button type="submit" class="btn btn-default">Build Lucene Index</button><br />
                        @ViewBag.Result
                    </div>
                </div>
            }
        </div>
    </div>
</div>
