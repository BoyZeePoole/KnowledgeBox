@model IEnumerable<KnowledgeBox.Models.Target>

<div class="container" style="height: 712px; width: 1200px; padding-right: 0px; padding-left: 0px; margin-right: auto; margin-left: auto">  
   @Html.Partial("_AdminMenu")
  <div class="row" style="margin: 0; background: #FFF; padding: 20px">
    <div class="col-md-12" style="">
      <table class="table table-striped table-bordered table-hover">
        <thead>
          <tr>
            <th>Description</th>
            <th>Date</th>
            <th>
              <a href="@Url.Action("EditTarget")">
                <i class="glyphicon glyphicon-plus"></i>
                <span class="sr-only">Edit</span>
              </a>
            </th>
          </tr>
        </thead>
        @foreach (var item in Model)
        {
          <tr>
            <td>@item.Target_Description</td>
            <td>@item.Target_Date</td>
            <td>
              <a href="@Url.Action("EditTarget", new { id = @item.Target_Id})">
                <i class="glyphicon glyphicon-pencil"></i>
                <span class="sr-only">Edit</span>
              </a>
            </td>
          </tr>          
        }
      </table>
      <div>
        @Html.ActionLink("Back to List", "Index")
      </div>
    </div>
  </div>
</div>

